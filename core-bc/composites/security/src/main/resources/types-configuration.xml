<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <import resource="classpath*:local-jpa-infrastructure-configuration.xml"/>
  <context:annotation-config/>
  <context:spring-configured/>
  <context:component-scan base-package="se.vgregion.portal.cs.domain"/>

  <bean id="cryptoUtil" name="cryptoUtil" class="se.vgregion.portal.cs.util.AesCtrCryptoUtilImpl">
    <constructor-arg value="${user.home}/.cs/cv.key"/>
  </bean>

</beans>
