<?xml version="1.0" encoding="UTF-8"?>

<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
        >
  <!-- Message bus -->

  <bean id="messageBus" class="com.liferay.portal.kernel.messaging.MessageBusUtil"
        factory-method="getMessageBus"/>

  <!-- Destinations -->

  <bean id="destination.account_activation" class="com.liferay.portal.kernel.messaging.SerialDestination"
        init-method="afterPropertiesSet">
    <property name="name" value="${messagebus.destination}"/>
  </bean>
  <bean id="destination.account_activation_reply" class="com.liferay.portal.kernel.messaging.SerialDestination"
        init-method="afterPropertiesSet">
    <property name="name" value="${messagebus.destination}.REPLY"/>
  </bean>

  <!-- Configurator -->

  <bean id="messagingConfigurator.core"
        class="com.liferay.portal.kernel.messaging.config.DefaultMessagingConfigurator" init-method="init"
        destroy-method="destroy">
    <property name="destinations">
      <list>
        <ref bean="destination.account_activation"/>
        <ref bean="destination.account_activation_reply"/>
      </list>
    </property>
    <property name="messageBus">
      <ref bean="messageBus"/>
    </property>
  </bean>

</beans>