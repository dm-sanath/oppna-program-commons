<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
                           http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

  <context:property-placeholder location="classpath:META-INF/messaging.properties"/>

  <bean id="activateRoutes" class="se.vgregion.routes.MessagebusJmsRouteBuilder">
    <constructor-arg index="0" value="${activate.messagebus.destination}"/>
    <constructor-arg index="1" value="${activate.activemq.destination}"/>
  </bean>

  <bean id="createRoutes" class="se.vgregion.routes.MessagebusRestRouteBuilder">
    <constructor-arg index="0" value="${create.messagebus.destination}"/>
    <constructor-arg index="1" value="${create.rest.destination}"/>
  </bean>

  <bean id="inviteRoutes" class="se.vgregion.routes.MessagebusJmsRouteBuilder">
    <constructor-arg index="0" value="${invite.messagebus.destination}"/>
    <constructor-arg index="1" value="${invite.activemq.destination}"/>
  </bean>

  <camelContext xmlns="http://camel.apache.org/schema/spring">

    <routeBuilder ref="activateRoutes"/>
    <routeBuilder ref="createRoutes"/>
    <routeBuilder ref="inviteRoutes"/>

  </camelContext>

</beans>