<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
    ">


  <camelContext xmlns="http://camel.apache.org/schema/spring">
    <route>
      <from uri="direct:testProducer"/>
      <to uri="liferay:destination"/>
    </route>

    <route>
      <from uri="liferay:testConsumer"/>
      <to uri="mock:result"/>
    </route>

    <route>
      <from uri="liferay:vgr/testJmsDestination"/>
      <to uri="activemq:queue:TEST.QUEUE"/>
    </route>

    <route>
      <from uri="liferay:vgr/testCamelDestination"/>
      <log message="1 b: ${body} h: ${headers}" loggingLevel="INFO"/>
      <to uri="activemq:queue:TEST.QUEUE?preserveMessageQos=true&amp;replyTo=TEST.QUEUE.REPLY"/>
    </route>

    <route>
      <from uri="activemq:queue:TEST.QUEUE.REPLY"/>
      <log message="3 b: ${body} h: ${headers}" loggingLevel="INFO"/>
      <to uri="liferay:vgr/testCamelDestinationReply"/>
    </route>

    <!--<route>-->
      <!--&lt;!&ndash;<from uri="direct:apa"/>&ndash;&gt;-->
      <!--<from uri="activemq:queue:TEST.QUEUE"/>-->
      <!--<log message="2 b: ${body} h: ${headers}" loggingLevel="INFO"/>-->
      <!--<to uri="activemq:queue:TEST.QUEUE.REPLY"/>-->
      <!--&lt;!&ndash;<to uri="direct:apa.reply"/>&ndash;&gt;-->
    <!--</route>-->

    <route>
      <from uri="liferay:testFile"/>
      <to uri="file:bin/?fileName=testFile.txt"/>
    </route>
  </camelContext>

</beans>