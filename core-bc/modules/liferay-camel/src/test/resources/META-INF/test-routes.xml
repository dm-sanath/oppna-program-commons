<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
    ">

  <bean id="messagebusJmsRoutes" class="se.vgregion.routes.MessagebusJmsRouteBuilder">
    <constructor-arg index="0" value="${messagebus.destination}" />
    <constructor-arg index="1" value="${activemq.destination}" />
  </bean>

  <camelContext xmlns="http://camel.apache.org/schema/spring">
    <routeBuilder ref="messagebusJmsRoutes" />

    <route>
      <from uri="direct:testProducer"/>
      <to uri="liferay:destination"/>
    </route>

    <route>
      <from uri="liferay:testConsumer"/>
      <to uri="mock:result"/>
    </route>

    <route>
      <from uri="liferay:vgr/testJmsDestination"/>
      <to uri="activemq:queue:TEST.QUEUE"/>
    </route>

    <route>
      <from uri="liferay:testFile"/>
      <to uri="file:bin/?fileName=testFile.txt"/>
    </route>
  </camelContext>

</beans>