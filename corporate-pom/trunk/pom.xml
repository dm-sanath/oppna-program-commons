                <exclude>target/**</exclude>
                <exclude>**/NOTICES.txt</exclude>
                <exclude>thirdpartylicenses/**</exclude>
                <exclude>**/LICENSE.rtf</exclude>
                <exclude>**/context.xml</exclude>
              </excludes>
            </configuration>
            <executions>
              <execution>
                <id>format</id>
                <phase>process-sources</phase>
                <goals>
                  <goal>format</goal>
                </goals>
              </execution>
              <execution>
                <id>check</id>
